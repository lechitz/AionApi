# Tags domain schema (extends root types defined in root.graphqls)

type Tag {
    id: ID!
    name: String!
    categoryId: ID!
    description: String
}

input CreateTagInput {
    name: String!
    categoryId: ID!
    description: String
}

extend type Query {
    tags: [Tag!]! @auth(roles: "user")
    tagById(id: ID!): Tag @auth(roles: "user")
}

extend type Mutation {
    createTag(input: CreateTagInput!): Tag! @auth(roles: "user")
}
